{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "uvicorn main:app --reload"
    },
    "deploy": {
      "runtime": "V2",
      "numReplicas": 1,
      "startCommand": "pip install -r requirements.txt",
      "sleepApplication": false,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }